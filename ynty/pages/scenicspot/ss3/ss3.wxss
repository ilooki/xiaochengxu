/* pages/scenicspot/ss2/ss2.wxss */

page {
  width: 100%;
  height: 100%;
}

.head {
  width: 100%;
  position: relative;
}

.head-image {
  width: 100%;
  height: 380rpx;
}

.head-title {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  height: min-content;
  margin: auto;
  text-align: center;
  font-size: x-large;
  color: white;
}

.body {
  width: 100%;
}

.body-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30rpx;
}

.body-context {
  padding-top: 40rpx;
  padding-left: 60rpx;
  padding-right: 60rpx;
}

.item {
  margin-bottom: 30rpx;
  position: relative;
}

.item-hover {
  opacity: 0.9;
  transform: scale(0.99, 0.99);
}

.item-image {
  border-radius: 20rpx;
  height: 200rpx;
  width: 560rpx;
}

.language-list {
  height: 60rpx;
  width: 600rpx;
  border-radius: 30rpx;
  background-color: #ccc;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.language-item {
  width: 33.33%;
  text-align: center;
}

.language-item-selected {
  width: 33.34%;
  height: 100%;
  text-align: center;
  background-color: #fff;
}

.language-item-hover {
  background-color: #fdfdfd;
  transform: scale(1.1, 1.1);
}

.audio-control-hover{
  background-color: #7ffdfdfd;
  transform: scale(1.1, 1.1);
}

.audio-control {
  position: fixed;
  padding: 10rpx;
  background-color: #000000;
  opacity: 0.7;
  right: 0;
  bottom: 0;
  width: 80rpx;
  height: 80rpx;
  margin: 70rpx;
  border-radius: 50rpx;
}
